<h1 align="center">Creer nouvel user</h1>

<%= render 'shared/errors', obj: @user %>

<div class="row">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
            <div class="col-sm-2 control-label">
                <%= f.label :username %>
            </div>
            <div class="col-sm-6">
                <%= f.text_field :username, class: "form-control", placeholder: "Votre username" %>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-2 control-label">
                <%= f.label :email %>
            </div>
            <div class="col-sm-6">
                <%= f.text_field :email, class: "form-control", placeholder: "Votre email" %>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-2 control-label">
                <%= f.label :password %>
            </div>
            <div class="col-sm-6">
                <%= f.password_field :password, class: "form-control", placeholder: "Votre mot de passe" %>
            </div>
        </div>
        
        
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit "S'inscrire", class: "btn btn-default" %>
            </div>
        </div>
    <% end %>
</div>

<div class="col-sm-offset-2">
    <%= link_to "Retour a la liste des articles", articles_path %>
</div>